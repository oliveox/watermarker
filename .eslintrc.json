{
    "env": {
        // "browser": false,
        // "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [2, "tab"],
		"no-tabs": 0,
		"max-len": ["error", { "code": 120 }],
        "comma-dangle": ["error", "only-multiline"]
    }
}
